<UserControl
    x:Class="RevitBatchExporter.Frontend.Components.ModalComponents.ErrorModalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitBatchExporter.Frontend.Components.ModalComponents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border
        Height="auto"
        Padding="60"
        Background="{StaticResource BackgroundColor}">
        <Grid>
            <Label
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                Content="{Binding ErrorMessage}"
                FontSize="20"
                Foreground="White" />


            <Border BorderBrush="{StaticResource PrimaryColorBrush}">
                <ListView />
            </Border>
        </Grid>
    </Border>
</UserControl>

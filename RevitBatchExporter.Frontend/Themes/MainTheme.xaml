<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BasicTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="BasicBackgroundStyle" TargetType="Control">
        <Setter Property="Background" Value="LightGray" />
    </Style>

    <SolidColorBrush x:Key="PrimaryTextColorBrush" Color="White" />
    <SolidColorBrush x:Key="SecondaryTextColorBrush" Color="Gray" />
    <SolidColorBrush x:Key="PrimaryColorBrush" Color="#9d98b9" />
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="#FE6584" />
    <SolidColorBrush x:Key="WarningColorBrush" Color="Yellow" />
    <SolidColorBrush x:Key="BackgroundColor" Color="#272537" />
    <SolidColorBrush x:Key="HeaderColor" Color="#22202f" />
    <SolidColorBrush x:Key="PrimaryColorClickBrush" Color="#6c6696" />

    <Style x:Key="MainFontSize" TargetType="Control">
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style x:Key="TitleFontSize" TargetType="Control">
        <Setter Property="FontSize" Value="25" />
    </Style>

</ResourceDictionary>